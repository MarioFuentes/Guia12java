<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletSencillo</servlet-name>
        <servlet-class>javaservlets.ServletSencillo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFormulario01</servlet-name>
        <servlet-class>javaservlets.ServletFormulario01</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCalculadora</servlet-name>
        <servlet-class>javaservlets.ServletCalculadora</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletSencillo</servlet-name>
        <url-pattern>/ServletSencillo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFormulario01</servlet-name>
        <url-pattern>/ServletFormulario01</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCalculadora</servlet-name>
        <url-pattern>/ServletCalculadora</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
